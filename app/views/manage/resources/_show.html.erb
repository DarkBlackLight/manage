<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="card-title"><%= @model.model_name.human %><%= t 'manage.resources.info' %></h5>
        </div>
      </div>

      <div class="card-body">
        <table class="table table-striped">
          <tbody>
          <%= yield @resource %>
          </tbody>
        </table>

      </div>
    </div>

    <%= yield :bottom_content if content_for?(:bottom_content) %>
  </div>

  <div class="col-md-6">
    <%= yield :right_content if content_for?(:right_content) %>
  </div>

</div>

<% content_for :footer do %>
  <footer class="c-footer">
    <button class="btn btn-link go-back"><%= (t 'manage.resources.back') %></button>
    <div class="mfs-auto">
      <% if can? :update, @resource %>
        <%= link_to (t 'manage.resources.edit'), ({ action: 'edit', id: @resource.id }), class: 'btn btn-warning' %>
      <% end %>
      <% if can? :destroy, @resource %>
        <%= link_to (t 'manage.resources.delete'), ({ action: 'destroy', id: @resource.id }), method: :delete, data: { confirm: (t 'manage.resources.delete_confirmation') }, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </footer>
<% end %>
