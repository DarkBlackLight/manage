<!DOCTYPE html>
<html>
<head>
  <title>Manage</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "manage/application", media: "all", 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'manage/application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="c-app">

<div class="c-sidebar c-sidebar-dark c-sidebar-fixed c-sidebar-lg-show" id="sidebar">
  <%= render 'layouts/manage/sidebar' %>
</div>

<div class="c-wrapper">

  <%= render 'layouts/manage/header' %>

  <div class="c-body">
    <main class="c-main">
      <div class="container-fluid">
        <div class="fade-in">
          <%= yield %>
        </div>
      </div>
    </main>
  </div>

  <%= yield :footer if content_for?(:footer) %>
</div>

</body>
</html>
