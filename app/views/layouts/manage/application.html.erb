<!DOCTYPE html>
<html>
<head>
  <title>Manage</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "manage", media: "all", 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'manage', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous"/>
</head>

<% if devise_controller? %>

  <%= yield %>

<% else %>

  <body class="c-app">

  <div class="c-sidebar c-sidebar-dark c-sidebar-fixed c-sidebar-lg-show" id="sidebar">
    <%= render 'layouts/manage/sidebar' %>
  </div>

  <div class="c-wrapper">

    <%= render 'layouts/manage/header' %>

    <div class="c-body">
      <main class="c-main">
        <div class="container-fluid">
          <div class="fade-in">
            <%= yield %>
          </div>
        </div>
      </main>
    </div>

    <%= yield :footer if content_for?(:footer) %>
  </div>

  </body>
<% end %>

</html>
